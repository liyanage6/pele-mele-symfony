{% extends 'base.html.twig' %}

{% block body %}
    <h1>Todo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ todo.name }}</td>
            </tr>
            <tr>
                <th>Startedat</th>
                <td>{% if todo.startedAt %}{{ todo.startedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Finishedat</th>
                <td>{% if todo.finishedAt %}{{ todo.finishedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if todo.createdAt %}{{ todo.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if todo.updatedAt %}{{ todo.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Done</th>
                <td>{% if todo.done %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ todo.author }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('todo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('todo_edit', { 'id': todo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
