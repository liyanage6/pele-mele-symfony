{% extends "base.html.twig" %}

{% block body %}
    <h2>Add Article</h2>
    <form method="post">
        {{ form_start(form) }}

        <div class="form-group col-md-6">
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
        </div>

        <div class="form-group col-md-6">
            {{ form_label(form.content) }}
            {{ form_widget(form.content) }}
        </div>

        {{ form_widget(form.submit) }}

        {{ form_end(form) }}
    </form>
{% endblock %}
