<form method="post">
    {{ form_start(form) }}

    <div class="form-group col-md-12">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <input type="submit" value="Create" class="btn btn-primary pull-right" />
    {{ form_end(form) }}
</form>